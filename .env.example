# OmniMED Environment Variables Template
# Copy this file to .env and fill in the values for your environment
# NEVER commit .env file with sensitive data to version control

# Application Environment
NODE_ENV=production
APP_VERSION=3.0.0
DEBUG=false

# Server Configuration
PORT=3000
HOST=0.0.0.0
BASE_URL=https://omnimed.example.com

# Security
HTTPS_ENABLED=true
SECURE_COOKIES=true

# API Configuration
API_URL=https://api.example.com
API_TIMEOUT=30000

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOGGING_ENDPOINT=https://logs.example.com/api/logs
REMOTE_LOGGING_ENABLED=false

# Database (if future implementation)
DATABASE_URL=
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# Analytics
ANALYTICS_ENABLED=false
TRACKING_ID=

# PWA Configuration
PWA_ENABLED=true
SERVICE_WORKER_ENABLED=true

# Cache Configuration
CACHE_DURATION=86400
ASSET_CACHE_DURATION=604800
GZIP_ENABLED=true

# Email (if future implementation)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@omnimed.example.com

# Third-party Services
SENTRY_DSN=
MIXPANEL_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_KEY=

# Feature Flags
FEATURE_MEDICATION_CALCULATOR=true
FEATURE_THEME_TOGGLE=true
FEATURE_OFFLINE_MODE=true
FEATURE_DARK_MODE=true

# Security Headers
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
X_CONTENT_TYPE_OPTIONS=nosniff
X_FRAME_OPTIONS=DENY
X_XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin

# CORS Configuration
CORS_ENABLED=false
CORS_ORIGIN=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-secret-key-here-change-in-production
SESSION_TIMEOUT=3600

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
